[flake8]
# Ignore specific errors 
ignore = 
    ES01,
    E203,
    F402,
    F401,
    W293,
    W292,

# Exclude files or directories from linting. 
exclude = 
    .git,
    __pycache__,
    migrations,
    .mypy_cache,
    env

# Maximum line length 
max-line-length = 130

# Maximum McCabe complexity 
max-complexity = 12 

# Acceptable McCabe complexity per module 
max-module-members = 10 

# Maximum number of function arguments
max-function-args = 6

# Maximum number of expressions in a comprehension 
max-expressions = 5 

# Maximum number of nested blocks 
max-nested-blocks = 5 

# Maximum number of imports in a module 
max-imports = 10 

# Maximum number of methods in a class 
max-methods = 10 

# Maximum number of attributes in a class 
max-attributes = 7 

# Maximum number of lines in a file 
max-line = 700  
